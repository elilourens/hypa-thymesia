# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=sb_secret_your_service_role_key_here

# Pinecone Configuration
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-east-1-aws

# Pinecone Index Names
PINECONE_TEXT_INDEX_NAME=text-index
PINECONE_IMAGE_INDEX_NAME=image-index
PINECONE_EXTRACTED_IMAGE_INDEX_NAME=extracted-image-index
PINECONE_VIDEO_FRAME_INDEX_NAME=video-frames
PINECONE_VIDEO_TRANSCRIPT_INDEX_NAME=video-transcripts
PINECONE_MAX_BATCH=100

# Embedding Configuration
TEXT_EMBED_DIM=384
IMAGE_EMBED_DIM=512
DEEP_IMAGE_EMBED_DIM=512

# Ollama Configuration
OLLAMA_URL=http://localhost:11434

# Microservice URLs
VIDEO_SERVICE_URL=http://localhost:8001
FORMATTING_SERVICE_URL=http://localhost:8002
USE_TAGGING_MICROSERVICE=true
FORMATTING_MAX_CONCURRENT=10

# Redis and Celery Configuration
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
USE_CELERY=false

# Stripe Configuration (optional)
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here

# JWT Configuration
JWT_ALGORITHM=HS256
JWT_SECRET_KEY=your_secret_key_here_min_32_chars

# API Configuration
API_PREFIX=/api/v1
DEBUG=false
