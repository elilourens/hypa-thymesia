# Pinecone Configuration (uses same credentials as main backend)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-east-1-aws  # Optional, your Pinecone environment

# Pinecone Index Names for Video Collections
PINECONE_VIDEO_FRAME_INDEX_NAME=video-frames
PINECONE_VIDEO_TRANSCRIPT_INDEX_NAME=video-transcripts

# Pinecone Batch Size (optional, default: 100)
PINECONE_MAX_BATCH=100

# Supabase Configuration (uses same credentials as main backend)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=sb_secret_your_service_role_key_here  # Use the sb_secret_ format, not JWT

# Supabase Storage Buckets
VIDEO_BUCKET=videos
VIDEO_FRAMES_BUCKET=video-frames

# Server Configuration
HOST=0.0.0.0
PORT=8001
RELOAD=true  # Set to true for development

# Video Processing Configuration
FRAME_INTERVAL=1.5  # Extract one frame every N seconds
DETECT_SCENES=true  # Enable scene detection for better diversity
SCENE_THRESHOLD=30.0  # Scene change detection threshold
CHUNK_DURATION=20.0  # Transcript chunk duration in seconds

# Whisper Model Configuration
WHISPER_MODEL=base  # Options: tiny, base, small, medium, large

# Redis and Celery Configuration
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
USE_CELERY=false

# Note: This service shares credentials with the main hypa-thymesia backend
# You can use the same .env values from the parent backend directory
